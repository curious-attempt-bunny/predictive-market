<div>
  <h1>Welcome to the Prophetron!</h1>
  <table>
    <thead>
      <tr>
        <th>Event</th>
        <th>Outcome</th>
        <th>Price</th>
        <%- if current_user %>
        <th>Held</th>
        <th>Valuation</th>
        <%- end -%>
      </tr>
    </thead>
    <tbody>
      <%- @outcomes.each do |outcome| %>
      <tr>
        <td><%= outcome.event.name %></td>
        <td><%= outcome.name %></td>
        <td><%= '%.2f' % outcome.share_price %></td>
        <%- if current_user %>
        <td><%= '%.2f' % current_user.quantity(outcome) %></td>
        <td><%= '%.2f' % current_user.valuation(outcome) %></td>
        <%- end -%>
      </tr>
      <%- end %>
    </tbody>
  </table>
</div>